{
  "$schema": "http://interagent.github.io/interagent-hyper-schema",
  "definitions": {
    "app": {
      "definitions": {
        "identity": {
          "description": "unique identifier of app",
          "type": ["string"]
        },
        "name": {
          "description": "unique name of app",
          "type": ["string"]
        }
      }
    },
    "space": {
      "definitions": {
        "id": {"description": "unique identifier of space", "type": ["string"]},
        "name": {"description": "unique name of space", "type": ["string"]},
        "identity": {
          "anyOf": [
            {"$ref": "#/definitions/space/definitions/id"},
            {"$ref": "#/definitions/space/definitions/name"}
          ]
        }
      }
    }
  },
  "links": [
    {"href": "/apps", "method": "GET", "title": "List Apps", "description": "List existing apps."},
    {
      "href": "/apps",
      "method": "POST",
      "title": "Create App",
      "description": "Create a new app.",
      "schema": {
        "properties": {
          "name": {"$ref": "#/definitions/app/definitions/name"}
        },
        "required": ["name"],
        "type": ["object"]
      }
    },
    {
      "href": "/apps/{(%23%2Fdefinitions%2Fapp%2Fdefinitions%2Fidentity)}",
      "method": "GET",
      "title": "App Info",
      "description": "Info for app."
    },
    {
      "href": "/spaces/{(%23%2Fdefinitions%2Fspace%2Fdefinitions%2Fidentity)}",
      "method": "GET",
      "title": "Space Info",
      "description": "Info for space."
    }
  ]
}

